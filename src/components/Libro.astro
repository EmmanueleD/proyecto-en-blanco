---
import Icon from "./Icon.vue";

const { title, description, image, subtitle, link } = Astro.props;
---

<div class="bg-white p-8 rounded-lg shadow-sm border border-gray-100">
  <div class="flex flex-col gap-8">
    <div class="mx-auto w-full max-w-[300px]">
      <img
        src={image}
        alt={title}
        class="w-full aspect-[2/3] object-cover rounded-lg shadow-md hover:scale-105 transition-transform duration-300"
      />
    </div>
    <div class="text-center">
      <h2 class="text-2xl font-display font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <h3 class="text-xl text-primary mb-4">
        {subtitle}
      </h3>
      <p class="text-gray-600 mb-6">
        {description}
      </p>
      <button
        onclick={`window.open('${link}', '_blank')`}
        class="btn-primary inline-flex items-center"
        role="link"
        aria-label="Comprar en Amazon"
      >
        <Icon name="ri:amazon-fill" size={20} className="mr-2" client:load />
        Comprar en Amazon
      </button>
    </div>
  </div>
</div>
