---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.vue";
import Icon from "../components/Icon.vue";
import Header from "../components/Header.astro";

const FORMSPREE_ENDPOINT = import.meta.env.PUBLIC_FORMSPREE_ENDPOINT;
---

<Layout title="Contacto - Proyecto en Blanco">
  <Navigation client:load />

  <Header
    title="Contacto"
    description="¿Tienes alguna pregunta? Estamos aquí para ayudarte."
  />

  <!-- Formulario de Contacto -->
  <section class="py-16">
    <div class="container max-w-4xl">
      <div class="bg-white p-8 rounded-lg shadow-sm">
        <form
          action={FORMSPREE_ENDPOINT}
          method="POST"
          class="space-y-6"
          id="contact-form"
        >
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label
                for="nombre"
                class="block text-sm font-medium text-gray-700 mb-1"
              >
                Nombre
              </label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-1"
              >
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
          </div>
          <div>
            <label
              for="asunto"
              class="block text-sm font-medium text-gray-700 mb-1"
            >
              Asunto
            </label>
            <input
              type="text"
              id="asunto"
              name="asunto"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
            />
          </div>
          <div>
            <label
              for="mensaje"
              class="block text-sm font-medium text-gray-700 mb-1"
            >
              Mensaje
            </label>
            <textarea
              id="mensaje"
              name="mensaje"
              rows="4"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
            ></textarea>
          </div>
          <div class="flex items-center justify-between">
            <button
              type="submit"
              class="bg-primary-600 text-white px-6 py-2 rounded-md hover:bg-primary-700 transition-colors duration-200"
            >
              Enviar mensaje
            </button>
            <div id="form-status" class="hidden">
              <p class="text-green-600" id="success-message">
                ¡Mensaje enviado correctamente!
              </p>
              <p class="text-red-600" id="error-message">
                Hubo un error al enviar el mensaje.
              </p>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Información de Contacto -->
  <section class="py-16 bg-gray-50">
    <div class="container max-w-4xl">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div
            class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <Icon name="ic:baseline-email" size={32} client:load />
          </div>
          <h3 class="text-lg font-bold mb-2">Email</h3>
          <p class="text-gray-600">contacto@proyectoenblanco.com</p>
        </div>
        <div class="text-center">
          <div
            class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <Icon name="ic:baseline-phone" size={32} client:load />
          </div>
          <h3 class="text-lg font-bold mb-2">Teléfono</h3>
          <p class="text-gray-600">+34 XXX XXX XXX</p>
        </div>
        <div class="text-center">
          <div
            class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <Icon name="ic:baseline-location-on" size={32} client:load />
          </div>
          <h3 class="text-lg font-bold mb-2">Dirección</h3>
          <p class="text-gray-600">Calle de la familia, 123, 12345, Madrid</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Redes Sociales -->
  <section class="py-16 bg-gradient-secondary">
    <div class="container max-w-4xl text-center">
      <h2 class="text-3xl font-display font-bold mb-8">
        Síguenos en Redes Sociales
      </h2>
      <div class="flex justify-center space-x-6">
        <a
          href="https://www.instagram.com/proyectoenblancoms/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 hover:text-primary-600"
        >
          <span class="sr-only">Instagram</span>
          <Icon name="mdi:instagram" size={32} client:load />
        </a>
        <a
          href="https://www.youtube.com/channel/UCc89DFl_bF60n-qXtkYGgOw"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 hover:text-primary-600"
        >
          <span class="sr-only">YouTube</span>
          <Icon name="mdi:youtube" size={32} client:load />
        </a>
        <a
          href="https://www.tiktok.com/@proyectoenblancoms"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 hover:text-primary-600"
        >
          <span class="sr-only">TikTok</span>
          <Icon name="ic:baseline-tiktok" size={32} client:load />
        </a>
        <a
          href="https://creators.spotify.com/pod/show/proyectoenblanco"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 hover:text-primary-600"
        >
          <span class="sr-only">Spotify</span>
          <Icon name="mdi:spotify" size={32} client:load />
        </a>
      </div>
    </div>
  </section>

  <script>
    const form = document.getElementById("contact-form");
    const formStatus = document.getElementById("form-status");
    const successMessage = document.getElementById("success-message");
    const errorMessage = document.getElementById("error-message");

    if (form) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        try {
          const formData = new FormData(form);
          const response = await fetch(form.action, {
            method: "POST",
            body: formData,
            headers: {
              Accept: "application/json"
            }
          });

          formStatus.classList.remove("hidden");
          if (response.ok) {
            form.reset();
            successMessage.classList.remove("hidden");
            errorMessage.classList.add("hidden");
          } else {
            throw new Error("Error en el envío");
          }
        } catch (error) {
          formStatus.classList.remove("hidden");
          successMessage.classList.add("hidden");
          errorMessage.classList.remove("hidden");
        }
      });
    }
  </script>
</Layout>
